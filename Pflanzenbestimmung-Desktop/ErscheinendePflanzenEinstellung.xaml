<UserControl x:Class="Pflanzenbestimmung_Desktop.ErscheinendePflanzenEinstellung"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pflanzenbestimmung_Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource HauptStyle}">
    <StackPanel HorizontalAlignment="Center">
        <Border Margin="10">
            <TextBox Style="{DynamicResource PflanzenStyle}" Width="300" />
        </Border>
        <ScrollViewer Style="{DynamicResource ErscheinendePflanzenButtonsStyle}"
                      Height="400">
            <StackPanel>
                <ToggleButton Content="Rose" />
                <ToggleButton Content="Tulpe" />
                <ToggleButton Content="Nelke" />
                <ToggleButton Content="Kastanie" />
                <ToggleButton Content="Hagebutte" />
                <ToggleButton Content="Fichte" />
                <ToggleButton Content="Kiefer" />
                <ToggleButton Content="Tanne" />
                <ToggleButton Content="Spitzahorn" />
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</UserControl>
