<UserControl x:Class="Pflanzenbestimmung_Desktop.XAML.BugReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pflanzenbestimmung_Desktop.XAML"
        mc:Ignorable="d"
        d:DesignHeight="400" d:DesignWidth="800"
        Style="{DynamicResource HauptStyle}">
    <Grid>
        <Label Content="Bitte beschreiben Sie Ihren Fehler im Text-Feld und klicken Sie auf &quot;Absenden&quot;" HorizontalAlignment="Left" Margin="190,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtMessage" HorizontalAlignment="Left" Height="278" Margin="80,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="645"/>
        <Button Name="btnAbsenden" Content="Absenden" HorizontalAlignment="Left" Margin="650,350,0,0" VerticalAlignment="Top" Width="75" Click="btnAbsenden_Click"/>
        <Button Name="btnZurück" Content="Zurück" HorizontalAlignment="Left" Margin="80,350,0,0" VerticalAlignment="Top" Width="75" Click="btnZurück_Click"/>

    </Grid>
</UserControl>
