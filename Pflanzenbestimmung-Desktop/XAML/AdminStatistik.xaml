<UserControl x:Class="Pflanzenbestimmung_Desktop.XAML.AdminStatistik"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pflanzenbestimmung_Desktop.XAML"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800"
             Style="{DynamicResource HauptStyle}">
    <StackPanel Margin="20" VerticalAlignment="Stretch">
        <Label Content="Statistiken durchsuchen:"/>
        <Border>
            <TextBox />
        </Border>

        <ListView Height="260" Margin="0,10" Name="StatistikSelectedAzubi" >

        </ListView>

        <Grid>
            <Button Name="Zurück" Click="Zurück_Click" Content="Zurück" VerticalAlignment="Bottom" Height="30" Width="200" HorizontalAlignment="Left"/>
            <Button Name="Ansehen" Click="Ansehen_Click" Content="Ansehen" Height="30" Width="200" HorizontalAlignment="Right" />
        </Grid>
    </StackPanel>
</UserControl>
