<UserControl x:Class="Pflanzenbestimmung_Desktop.Benutzerverwaltung"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pflanzenbestimmung_Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800"
             Style="{DynamicResource HauptStyle}">
    <StackPanel Margin="20" VerticalAlignment="Stretch">
        <Label Content="Benutzer durchsuchen:"/>
        <Border>
            <TextBox Style="{DynamicResource BenutzernameStyle}"/>
        </Border>

        <DataGrid Height="260" Margin="0,10" Name="Azubiliste" AutoGenerateColumns="True" > <!--True benötigt, sonst keine Tabelle mit Daten da.-->
        </DataGrid>

        <Grid>
            <Button Name="Zurück" Click="Zurück_Click" Content="Abbrechen" VerticalAlignment="Bottom" Height="30" Width="200" HorizontalAlignment="Left"/>
            <Button Name="Bearbeiten" Click="Bearbeiten_Click" Content="Bearbeiten" Height="30" Width="200" HorizontalAlignment="Right" />
        </Grid>
    </StackPanel>
</UserControl>
